<p id="notice"><%= notice %></p>

<p><strong>
      <% if user_signed_in? %>
      This product is being sold by, <%= @product.user.username %>
      <% end %>  
    </strong>
</p>

<%= image_tag @product.image, width: '300' %>

<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
