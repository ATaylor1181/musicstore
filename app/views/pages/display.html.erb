<thead>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<link rel="stylesheet" href="style.scss">
</thead>

<h1><%= Subcategory.find(params[:category_id]).instrument %></h1>
<tbody>
  
  <div class="container-fluid">
    <div class="row">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">


<% @products.where(category_id:params[:category_id]).each do |product| %>

	<div class="col-md-3 col-sm-4">
	<div class="wrimagecard wrimagecard-topimage">
          <a href="#">
          <div>
            <%= link_to product_path(product) do %>
              <%= image_tag product.image, style: "width: 300px;" %>
            <% end %>
          </div>
          <div class="wrimagecard-topimage_title">
            <h4><%= product.title %>
            <div class="pull-right badge"><%= number_to_currency(product.price/100.0) %></div></h4>
          </div>
        </a>
      </div>
    </div>


<% end %>
</tbody>